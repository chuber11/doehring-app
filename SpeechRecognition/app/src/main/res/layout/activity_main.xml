<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnRecognize"
        android:layout_width="339dp"
        android:layout_height="82dp"
        android:layout_marginBottom="16dp"
        android:text="Drücken und gedrückt halten zum Aufnehmen"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="167dp"
        android:layout_height="77dp"
        android:enabled="false"
        android:text="Abspielen"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecognize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLatencyASR"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="167dp"
        android:layout_height="77dp"
        android:enabled="false"
        android:text="Zurück"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecognize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.868"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLatencyASR"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tvText"
        android:layout_width="338dp"
        android:layout_height="416dp"
        android:layout_marginTop="56dp"
        android:gravity="center"
        android:hint=""
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLatencyASR"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:hint=""
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText" />

    <TextView
        android:id="@+id/tvLatencyTTS"
        android:layout_width="155dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:hint=""
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvText" />


</androidx.constraintlayout.widget.ConstraintLayout>
